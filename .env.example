# --- Configurações do Servidor ---

# Porta em que o servidor irá rodar. Padrão: 5050
PORT=5050


# --- Configurações de Segurança ---

# Defina uma chave de API segura para proteger seu servidor.
# Esta chave deve ser enviada no cabeçalho 'Authorization: Bearer SUA_CHAVE'.
# Se REQUIRE_API_KEY for False, este campo pode ficar vazio.
API_KEY=Crie uma chave com numeros e letras aleatorais ex-GymR3QaU6addRG4444kRVGee45

# Exigir chave de API para todas as requisições? (True/False)
# Para produção, é ALTAMENTE recomendado manter como True.
REQUIRE_API_KEY=True


# --- Configurações Padrão de TTS ---

# Voz padrão a ser usada se nenhuma for especificada na requisição.
# Exemplo: pt-BR-FranciscaNeural, en-US-AvaNeural, etc.
DEFAULT_VOICE=pt-BR-FranciscaNeural

# Formato de áudio padrão (mp3, opus, aac, flac, wav, pcm).
DEFAULT_RESPONSE_FORMAT=mp3

# Velocidade da fala padrão (1.0 = normal, 0.5 = 50% mais lento, 1.5 = 50% mais rápido).
DEFAULT_SPEED=1.0

# Idioma padrão para listar vozes (usado no endpoint /voices).
# Use 'all' para listar todas as vozes de todos os idiomas.
DEFAULT_LANGUAGE=pt-BR


# --- Configurações de Funcionalidades (Flags) ---

# Remover filtro de emojis e markdown do texto de entrada? (True/False)
# Recomendado: False (para o servidor limpar o texto automaticamente).
REMOVE_FILTER=False

# Habilitar logs de erro detalhados? (True/False)
# Útil para debug, pode ser desativado (False) em produção para logs mais limpos.
DETAILED_ERROR_LOGGING=True

# Habilitar endpoints de compatibilidade extras (ElevenLabs, Azure)? (True/False)
EXPAND_API=True

# Adicione a configuração de proxy se necessário
# PROXY="http://utilizador:senha@host_do_proxy:porta"

